{% extends "base.html.twig" %}

{% block title %}
    Categorie :
    {{ category.name }}
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('homepage') }}">Accueil</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">{{ category.name }}</a>
        </li>
    </ol>
    <h1>Categorie :
        {{ category.name }}
    </h1>

    <div class="row">
        {% for p in category.products %}
            <div class="col-3">
                {% include "product/_product_card.html.twig" %}
            </div>
        {% endfor %}
    </div>

{% endblock %}
